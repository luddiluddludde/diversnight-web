@using System.Web.UI.WebControls
@using Diversnight.Web.Models
@model IEnumerable<Diversnight.Web.Models.Country>

@{
    ViewBag.Title = "List of countries";
}

<h2>List of countries</h2>
<p>All countries with registered dive sites are displayed in the list below. Is your country missing? @Html.ActionLink("Register your divesite!", "Create", "Sites")</p>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sites)
        </th>
        <th>
            Divers 2014
        </th>
        <th>
            Divers 2013
        </th>
        <th>
            Divers 2012
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>@item.Sites.Count</td>
        <td>@item.DiversCount(2014)</td>
        <td>@item.DiversCount(2013)</td>
        <td>@item.DiversCount(2012)</td>
    </tr>
}

</table>
