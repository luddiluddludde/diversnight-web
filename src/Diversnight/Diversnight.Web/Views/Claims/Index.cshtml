@model IEnumerable<Diversnight.Web.Models.OrganizationClaim>

@{
    ViewBag.Title = "Index";
}

<h2>Organization claims</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Contact.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contact.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Organization)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Contact.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contact.Email)
        </td>
        <td>
            @Html.ActionLink(item.Organization.Name, "Details", "Organization", new{ id = item.Organization.Id}, null)
        </td>
        <td>
            @Html.ActionLink("Approve", "Approve", new { id=item.Id }, new { @class = "btn btn-default pull-right"})
        </td>
    </tr>
}
</table>
